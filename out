#!/usr/bin/env bash

CURL_OPTION=""
set -e
exec 3>&1
exec 1>&2

function evaluate {
  __var=$1
  # escape ( and ) from markdown
  __var="${__var//\(/\\(}"
  __var="${__var//\)/\\)}"
  __var="${__var//\:/\\:}"
  __var=$(eval echo $__var)
  echo $__var
}

payload=$(mktemp /tmp/resource-in.XXXXXX)
cat > "${payload}" <&0

# ---- Read params (new workflow compatible) ----
title=$(evaluate "$(jq -r '.params.title // "Concourse CI"' < "${payload}")")

text=$(evaluate "$(jq -r '.params.text // ""' < "${payload}")")
text_file="$1/"$(evaluate "$(jq -r '.params.text_file // ""' < "${payload}")")

# Text resolution (retain legacy logic)
# - 'text' always overrides 'text_file'
# - '_(NO MSG)_' being the default if neither are provded
# - If text file is missing: _(NO MSG FILE)_
# - If text file is blank: _(EMPTY MSG FILE)_"
text_output="_(NO MSG)_"
if [[ -n "${text_file}" ]]; then
  if [[ ! -f "${text_file}" ]]; then
    text_output="_(NO MSG FILE)_"
  else
    text_output="$(cat "${text_file}")"
    [[ -z "${text_output}" ]] && text_output="_(EMPTY MSG FILE)_"
  fi
fi
[[ -n "${text}" ]] && text_output="${text}"

# Color (fallback to legacy style param)
color=$(evaluate "$(jq -r '.params.color // .params.style // "default"' < "${payload}")")
ALLOWED_COLORS="default dark light accent good warning attention"
if [[ ! " ${ALLOWED_COLORS} " =~ " ${color} " ]]; then
  echo "Invalid color: ${color}. Allowed: ${ALLOWED_COLORS}" >&2
  exit 1
fi

# Button (fallback to legacy actionName/actionTarget)
button_url=$(evaluate "$(jq -r '.params.button_url // .params.actionTarget // empty' < "${payload}")")
button_text=$(evaluate "$(jq -r '.params.button_text // .params.actionName // "URL"' < "${payload}")")

# Expandable card params
expandable_title=$(evaluate "$(jq -r '.params.expandable_title // "View more"' < "${payload}")")
expandable_text=$(evaluate "$(jq -r '.params.expandable_text // empty' < "${payload}")")
expandable_logo=$(evaluate "$(jq -r '.params.expandable_logo // empty' < "${payload}")")

# Optional image
image_url=$(evaluate "$(jq -r '.params.image_url // empty' < "${payload}")")

DIR="${BASH_SOURCE%/*}"
[[ ! -d "$DIR" ]] && DIR="$PWD"

# Build JSON body via updated card.jq
body=$(jq -n \
  --arg COLOR "${color}" \
  --arg TITLE "${title}" \
  --arg TEXT "${text_output}" \
  --arg BUTTON_URL "${button_url}" \
  --arg BUTTON_TEXT "${button_text}" \
  --arg EXPANDABLE_TITLE "${expandable_title}" \
  --arg EXPANDABLE_TEXT "${expandable_text}" \
  --arg EXPANDABLE_LOGO "${expandable_logo}" \
  --arg IMAGE_URL "${image_url}" \
  -f ${DIR}/card.jq)

webhook_url="$(jq -r '.source.url // empty' < "${payload}")"
proxy_url="$(jq -r '.source.proxy_url // empty' < "${payload}")"
proxy_port="$(jq -r '.source.proxy_port // empty' < "${payload}")"
proxy_username="$(jq -r '.source.proxy_username // empty' < "${payload}")"
proxy_password="$(jq -r '.source.proxy_password // empty' < "${payload}")"
skip_cert_verification="$(jq -r '.source.skip_cert_verification // empty' < "${payload}")"
verbose="$(jq -r '.source.verbose // empty' < "${payload}")"
silent="$(jq -r '.source.silent // empty' < "${payload}")"

if [[ -z "${webhook_url}" ]]; then
  echo "Missing source.url (Teams workflow webhook URL)" >&2
  exit 1
fi

# Proxy handling (unchanged logic)
if [ -z ${proxy_url} ] || [ -z ${proxy_port} ]; then
  PROXY_OPTIONS=""
else
  PROXY_OPTIONS="--proxy ${proxy_url}:${proxy_port}"
fi
if [ -z ${proxy_url} ] || [ -z ${proxy_port} ] || [ -z ${proxy_username} ] || [ -z ${proxy_password} ]; then
  PROXY_OPTIONS="${PROXY_OPTIONS}"
else
  PROXY_OPTIONS="--proxy-user ${proxy_username}:${proxy_password} ${PROXY_OPTIONS}"
fi

# Curl flags
if [ -n "${skip_cert_verification}" ]; then
  CURL_OPTION="-k ${CURL_OPTION}"
fi
if [ -n "${verbose}" ]; then
  CURL_OPTION="-v ${CURL_OPTION}"
fi
if [ -n "${silent}" ]; then
  CURL_OPTION="-s ${CURL_OPTION}"
fi

redacted_webhook_url=$(echo "${webhook_url}" | sed -e 's#/\([^/\.]\{2\}\)[^/.]\{5,\}\([^/.]\{2\}\)#/\1â€¦\2#g' | jq -R .)
url_path="$(echo ${webhook_url} | sed -e "s/https\{0,1\}:\/\/[^\/]*\(\/[^?&#]*\).*/\1/")"

# Post (new workflow format)
curl ${CURL_OPTION} ${PROXY_OPTIONS} -H 'Content-Type: application/json' -d "${body}" "${webhook_url}" 2>&1 \
  | sed -e "s#${url_path}#***WEBHOOK URL REDACTED***#g"

timestamp=$(date +%s)
metadata="$(cat <<EOF
{
  "version": {"timestamp": "${timestamp}"},
  "metadata": [
    {"name": "url", "value": ${redacted_webhook_url}},
    {"name": "BUILD_PIPELINE_NAME", "value": "${BUILD_PIPELINE_NAME}"}
  ]
}
EOF
)"
echo "$metadata" >&3

